rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    function isUser() {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "user";
    }

    /* ================= USERS ================= */
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if request.auth.uid == userId;
    }

    /* ================= MEMBERS ================= */
    match /members/{memberId} {
      // Everyone logged in can read members
      allow read: if isAuthenticated();

      // Users can create INACTIVE members only
      allow create: if isUser()
        && request.resource.data.status == "inactive"
        && request.resource.data.statusMessage == "pending admin action";

      // Only admins can update or delete members
      allow update, delete: if isAdmin();
    }

    /* ================= APPROVAL REQUESTS ================= */
    match /member_approval_requests/{requestId} {
      // Users can CREATE requests
      allow create: if isUser();

      // Admins can read & update requests
      allow read, update: if isAdmin();

      // No one deletes approval history
      allow delete: if false;
    }

    /* ================= ORGANIZATIONS & ACTIVITY LOGS ================= */
    match /organizations/{orgId} {
      allow read, write: if isAdmin();
    }

    match /activity_logs/{logId} {
      allow read, write: if isAdmin();
    }
    
    match /audit_logs/{logId} {
      allow read, write: if isAdmin();
    }

    /* ================= OTHER COLLECTIONS ================= */
    match /{document=**} {
      allow read, write: if isAuthenticated();
    }
  }
}