rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Members collection - authenticated users can read/write
    match /members/{memberId} {
      allow read, write: if isAuthenticated();
    }
    
    // Organizations collection - authenticated users can read/write
    match /organizations/{orgId} {
      allow read, write: if isAuthenticated();
    }
    
    // Templates collection - authenticated users can read/write
    match /templates/{templateId} {
      allow read, write: if isAuthenticated();
    }
    
    // Activity logs - authenticated users can read/write
    match /activity_logs/{logId} {
      allow read, write: if isAuthenticated();
    }
    
    // Sent messages - authenticated users can read/write
    match /sent_messages/{messageId} {
      allow read, write: if isAuthenticated();
    }
    
    // Metadata (for counters) - authenticated users can read/write
    match /metadata/{docId} {
      allow read, write: if isAuthenticated();
    }
    
    // Users collection - authenticated users can read
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Default deny all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}